<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
        <% book.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, "Book Title", style: "display: block" %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>

  <div>
    <%= form.label :author, "Author", style: "display: block" %>
    <%= form.text_field :author, class: "form-control", required: true %>
  </div>

  <div>
    <%= form.label :price, "Price", style: "display: block" %>
    <%= form.number_field :price, class: "form-control", step: "0.01", required: true %>
  </div>

  <div>
    <%= form.label :published_date, "Published Date", style: "display: block" %>
    <%= form.date_field :published_date, class: "form-control", required: true %>
  </div>

  <div>
    <%= form.submit "Save Book", class: "btn btn-primary" %>
  </div>
<% end %>
